{
    "rules": {
        "userProgress": {
            "$uid": {
                ".read": "$uid === auth.uid",
                ".write": "$uid === auth.uid"
            }
        },
        "userStreak": {
            "$uid": {
                ".read": "$uid === auth.uid",
                ".write": "$uid === auth.uid"
            }
        },
        "userPoints": {
            "$uid": {
                ".read": "$uid === auth.uid",
                ".write": "$uid === auth.uid"
            }
        },
        "trips": {
            "dalat": {
                "config": {
                    ".read": true,
                    ".write": "auth != null && auth.token.email === 'nguyenbavinhcntt@gmail.com'"
                },
                "timeline": {
                    ".read": true,
                    ".write": "auth != null && auth.token.email === 'nguyenbavinhcntt@gmail.com'",
                    "$eventId": {
                        "menu": {
                            "$catIdx": {
                                "items": {
                                    "$itemIdx": {
                                        "qty": {
                                            ".write": true
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}